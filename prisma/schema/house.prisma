model House {
  id       Int     @id @default(autoincrement())
  schoolId Int
  name     String
  // Branding
  color    String? // Hex code
  logo     String? // URL
  motto    String?

  // Leadership
  houseMasterId        Int?
  captainStudentId     Int?
  viceCaptainStudentId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  school          School           @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  studentProfiles StudentProfile[]

  houseMaster TeacherProfile? @relation("HouseMaster", fields: [houseMasterId], references: [id], onDelete: SetNull)
  captain     StudentProfile? @relation("HouseCaptain", fields: [captainStudentId], references: [id], onDelete: SetNull)
  viceCaptain StudentProfile? @relation("HouseViceCaptain", fields: [viceCaptainStudentId], references: [id], onDelete: SetNull)

  @@unique([schoolId, name])
  @@index([schoolId])
}
